{
  "name": "@b12k/playwright-api-testing",
  "version": "0.0.0",
  "description": "Contract programming boilerplate to design, test and use API contracts with PactumJS and Zod",
  "keywords": [
    "design by contract",
    "contract testing",
    "contract programming",
    "api design",
    "api testing",
    "api types",
    "api contracts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "types": "dist/index.d.ts",
  "bin": {
    "pw-test": "dist/bin.js"
  },
  "type": "module",
  "scripts": {
    "test": "env-cmd playwright test",
    "qc": "run-p _qc:*",
    "fix": "run-p _fix:*",
    "build": "run-s _build:*",
    "prepare": "husky",
    "release": "release-it --ci",
    "_qc:eslint": "pnpm _eslint",
    "_qc:typecheck": "tsc --noEmit",
    "_qc:prettier": "pnpm _prettier . -c",
    "_qc:npm-check-updates": "ncu -e 2",
    "_fix:npm-check-updates": "ncu -u && pnpm i",
    "_fix:prettier": "pnpm _prettier . -w",
    "_fix:eslint": "pnpm _eslint --fix",
    "_build:clear": "shx rm -rf dist",
    "_build:types": "tsc --project tsconfig.build.json",
    "_build:bin": "swc lib/bin.ts -d dist --strip-leading-paths",
    "_prepare:husky": "husky init",
    "_prepare:env": "shx cp -u .env.example .env",
    "_prepare:playwright": "playwright install --with-deps",
    "_husky:commit-msg": "commitlint",
    "_husky:pre-commit": "run-p _husky:pre-commit:*",
    "_husky:pre-commit:tsc": "pnpm _qc:typecheck",
    "_husky:pre-commit:lint-staged": "lint-staged",
    "_husky:pre-push": "branch-name-lint",
    "_eslint": "eslint .",
    "_prettier": "prettier --ignore-path .gitignore --ignore-unknown"
  },
  "author": "Bogdan Kolesnyk",
  "license": "MIT",
  "devDependencies": {
    "@b12k/branch-name-lint": "1.1.0",
    "@b12k/env-cmd": "10.2.0",
    "@commitlint/config-conventional": "19.2.2",
    "@eslint/config-inspector": "0.4.11",
    "@eslint/js": "9.5.0",
    "@release-it/conventional-changelog": "8.0.1",
    "@swc/cli": "0.3.12",
    "@swc/core": "1.6.1",
    "@swc/helpers": "0.5.11",
    "@types/lodash": "4.17.5",
    "@types/lodash-es": "4.17.12",
    "@types/node": "20.14.5",
    "@types/shelljs": "0.8.15",
    "@types/update-notifier": "6.0.8",
    "commitlint": "19.3.0",
    "eslint": "9.5.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import-x": "0.5.1",
    "eslint-plugin-perfectionist": "2.11.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-unicorn": "54.0.0",
    "globals": "15.6.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.7",
    "npm-check-updates": "16.14.20",
    "npm-run-all": "4.1.5",
    "prettier": "3.3.2",
    "release-it": "17.3.0",
    "shx": "0.3.4",
    "stacktracey": "2.1.8",
    "ts-node": "10.9.2",
    "typescript": "5.4.5",
    "typescript-eslint": "8.0.0-alpha.14"
  },
  "dependencies": {
    "@playwright/test": "1.44.1",
    "commander": "12.1.0",
    "lodash-es": "4.17.21",
    "pactum": "3.7.0",
    "shelljs": "0.8.5",
    "update-notifier": "7.0.0",
    "zod": "3.23.8"
  }
}
